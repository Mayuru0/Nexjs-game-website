pipeline {
    agent any 
    
    stages { 
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'main', url: 'https://github.com/Mayuru0/Nexjs-game-website.git'
                }
            }
        }
        stage('Build Docker Image') {
            steps {  
                bat 'docker build -t mayuru001/build-1-10:%BUILD_NUMBER% .'
            }
        }
        stage('Login to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'docker-password', variable: 'docker-password')]) {
                    script {
                        bat "docker login -u mayuru001 -p %docker-password%"
                    }
                }
            }
        }
        stage('Push Image') {
            steps {
                bat 'docker push mayuru001/build-1-10:%BUILD_NUMBER%'
            }
        }
    }
    post {
        always {
            bat 'docker logout'
        }
    }
}